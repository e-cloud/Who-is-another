<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>

<GridPane fx:id="rootLayout" prefHeight="400.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wia.controller.SettingController">
  <!-- TODO Add Nodes -->
  <children>
  <HBox id="HBox" alignment="CENTER_LEFT">
    <children>
      <Label text="缓存数据到本地：" />
            <RadioButton fx:id="radioOn" mnemonicParsing="false" text="ON">
               <toggleGroup>
                  <ToggleGroup fx:id="cacheGroup" />
               </toggleGroup>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="radioOFF" mnemonicParsing="false" text="OFF" toggleGroup="$cacheGroup">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </RadioButton>
        <Label text="（鉴于用户信息不会经常改动，缓存数据到本地有助于加快加载速度以及减少网络通信）" />
    </children>
         <GridPane.margin>
            <Insets left="20.0" />
         </GridPane.margin>
  </HBox>
  <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" GridPane.rowIndex="1">
    <children>
      <Label text="刷新用户数据：" />
      <Button fx:id="refreshButton" mnemonicParsing="false" text="刷新" />
        <Label text="（刷新用户数据会删除本地相应用户缓存，重新从网络中拉取数据，再缓存到本地文件。）" />
    </children>
         <GridPane.margin>
            <Insets left="20.0" />
         </GridPane.margin>
  </HBox>
      <Button fx:id="typeManageButton" mnemonicParsing="false" onAction="#handleTypeManage" text="分类管理" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="20.0" />
         </GridPane.margin>
      </Button>
  </children>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-1.0" minWidth="10.0" prefWidth="-1.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-1.0" minHeight="-1.0" prefHeight="-1.0" vgrow="SOMETIMES" />
  </rowConstraints>
</GridPane>
